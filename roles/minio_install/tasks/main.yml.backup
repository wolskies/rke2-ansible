---
- name: Deploy MinIO Operator
  tags: [minio-operator, storage-minio]
  when: minio_install_operator | default(true)
  block:
    - name: Add MinIO Operator Helm repository
      kubernetes.core.helm_repository:
        name: minio-operator
        repo_url: https://operator.min.io
        state: present
      environment:
        KUBECONFIG: "{{ kubectl_config }}"
      when: not (skip_kubernetes_operations or skip_helm_operations)

    - name: Deploy the helm chart
      kubernetes.core.helm:
        name: minio-operator
        chart_ref: minio-operator/operator
        release_namespace: minio-operator
        update_repo_cache: true
        create_namespace: true
        state: present
        wait: true
      environment:
        KUBECONFIG: "{{ kubectl_config }}"
      when: not (skip_kubernetes_operations or skip_helm_operations)

    - name: Display MinIO Operator configuration (test mode)
      ansible.builtin.debug:
        msg:
          - "MinIO Operator would be deployed with:"
          - "Chart: minio-operator/operator"
          - "Namespace: minio-operator"
          - "Repository: https://operator.min.io"
      when: skip_kubernetes_operations or skip_helm_operations

- name: Configure DirectPV CSI Driver
  ansible.builtin.include_tasks:
    file: direct-pv.yaml
  tags: [minio-directpv, storage-minio]
  when: minio_install_directpv | default(true) and minio_csi_driver_name == "directpv-min-io"

- name: Deploy MinIO Tenant
  tags: [minio-tenant, storage-minio]
  when: minio_install_tenant | default(true)
  block:
    - name: Create minio-tenant directory
      ansible.builtin.file:
        path: "{{ minio_tenant_path }}"
        mode: "0744"
        state: directory

    - name: Copy values.yaml to master node
      ansible.builtin.template:
        src: values.yaml.j2
        dest: "{{ minio_tenant_path }}/values.yaml"
        mode: "0644"

    - name: Deploy Minio Tenant chart
      kubernetes.core.helm:
        name: minio-tenant
        chart_ref: minio-operator/tenant
        release_namespace: "{{ minio_tenant_namespace }}"
        create_namespace: true
        update_repo_cache: true
        state: present
        wait: true
        values_files:
          - "{{ minio_tenant_path }}/values.yaml"
      environment:
        KUBECONFIG: "{{ kubectl_config }}"
      when: not (skip_kubernetes_operations or skip_helm_operations)

    - name: Display MinIO Tenant configuration (test mode)
      ansible.builtin.debug:
        msg:
          - "MinIO Tenant would be deployed with:"
          - "Chart: minio-operator/tenant"
          - "Namespace: {{ minio_tenant_namespace }}"
          - "Tenant Name: {{ minio_tenant_name }}"
          - "Servers: {{ minio_servers }}"
          - "Volumes per server: {{ minio_volumes_per_server }}"
          - "Capacity: {{ minio_capacity_per_tenant }}"
      when: skip_kubernetes_operations or skip_helm_operations
