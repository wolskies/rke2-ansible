apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: wildcard-{{ traefik_domain }}-minio
  namespace: minio-tenant
spec:
  secretName: wildcard-{{ traefik_domain }}-minio-tls
  issuerRef:
    name: letsencrypt-prod
    kind: ClusterIssuer
  commonName: "{{ traefik_domain }}.com"
  dnsNames:
  - '*.{{ traefik_domain }}.com'
  - "{{ traefik_domain }}.com"