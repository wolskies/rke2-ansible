---
- name: Syntax test for longhorn_install role
  hosts: localhost
  gather_facts: false

  tasks:
    - name: Include longhorn_install role for syntax checking
      ansible.builtin.include_role:
        name: wolskinet.rke2_ansible.longhorn_install
      vars:
        # Minimal variables to satisfy syntax checking
        longhorn_chart_version: "1.9.1"
        kubectl_config: "/tmp/.kube/config"
        # Skip actual execution
        syntax_check_only: true
