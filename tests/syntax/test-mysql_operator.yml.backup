---
- name: Syntax test for mysql_operator role
  hosts: localhost
  gather_facts: false

  tasks:
    - name: Include mysql_operator role for syntax checking
      ansible.builtin.include_role:
        name: wolskinet.rke2_ansible.mysql_operator
      vars:
        mysql_operator_namespace: "mysql-operator"
        mysql_operator_chart_version: "2.2.5"
        mysql_operator_timeout: "600s"
        syntax_check_only: true
